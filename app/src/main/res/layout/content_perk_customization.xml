<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.onarollapp.onaroll.controller.PerkCustomization"
    tools:showIn="@layout/activity_perk_customization">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:weightSum="7">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/perk_customization_perk1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perk 1"
                    android:textSize="18sp" />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/perk_customization_perk2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perk 2"
                    android:textSize="18sp" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/perk_customization_perk3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perk 3"
                    android:textSize="18sp" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/perk_customization_perk4_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perk 4"
                    android:textSize="18sp" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/perk_customization_perk5_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perk 5"
                    android:textSize="18sp" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/perk_customization_perk6_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perk 6"
                    android:textSize="18sp" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/perk_customization_perk7_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perk 7"
                    android:textSize="18sp" />
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Perks"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp" />

            <ListView
                android:id="@+id/perk_customization_your_perks_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
